<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sun="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sun.customview.MainActivity">

    <TextView
        android:id="@+id/tv_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="BottomView" />

    <TextView
        android:id="@+id/tv_dialog"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="Dialog" />
    <TextView
        android:id="@+id/tv_dialog_util"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="DialogUtil" />

    <com.sun.customviewlibrary.CustomItemView
        android:id="@+id/civ_binding_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_ffffff"
        sun:left_image="@drawable/person_data_phone"
        sun:left_text="手机号绑定"
        sun:right_image="@drawable/next"
        sun:right_text="未绑定"
        sun:right_text_color="@color/color_D80000"
        sun:view_line_visible="false"></com.sun.customviewlibrary.CustomItemView>

</LinearLayout>
